@using Microsoft.AspNetCore.Html;
@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}
@model la_mia_pizzeria_static.Models.listaPizze


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - la_mia_pizzeria_static</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/la_mia_pizzeria_static.styles.css" asp-append-version="true" />
</head>
<body>
  
<header>
    <h1>Pizzeria da Santo</h1>
</header>

<div class="container-fluid d-flex">
    <div class="flex sidebar">
        <div class="title"><h1>Le nostre Pizze</h1></div>
        <ul>
            <li><a>Pizza Margherita</a></li>
            <li><a>Pizza Capricciosa</a></li>
             <li><a>Pizza Salsiccia e patate</a></li>
            <li><a>Pizza marinara</a></li>
            <li><a>Pizza  Quattro stagioni</a></li>

        </ul>
    </div>
    <div class="container d-flex flex-wrap">
    <div class="row">
                @{
                    foreach(var p in Model.listaDiPizze)
                    {
                         <div class="card">
                         <img src="@p.Foto" class="" alt="@p.Nome" />
                         <h1 class="titolo">@p.Nome</h1>
                         <p class="descrizione">@p.Descrizione</p>
                         <p class="prezzo"> @p.Prezzo euro</p>
                         </div>
                    }
                 }
    </div>

    </div>

</div>
</body>
</html>
